{
  "name": "fast-fluent",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p ./tsconfig.json && rollup -c && copy ./dist/fast-fluent-components.min.js ./test/clientside/wwwroot/",
    "start": "start-storybook -p 6007",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "build/helpers/*.ts"
    ],
    "coverageReporters": [
      "json",
      [
        "lcov",
        {
          "projectRoot": "."
        }
      ]
    ],
    "coverageThreshold": {
      "global": {
        "statements": 100,
        "branches": 100,
        "functions": 100,
        "lines": 100
      }
    },
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.ts?$": "ts-jest",
      "^.+\\.js?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "!<rootDir>/node_modules/lodash-es",
      "node_modules/jss-*",
      "node_modules/css-vendor"
    ],
    "testPathIgnorePatterns": [
      "packages/",
      "build/helpers/__tests__/*",
      "build/helpers/"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js?|ts?)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@microsoft/fast-components": "^1.6.0",
    "@storybook/addons": "^5.3.19",
    "@storybook/cli": "^5.3.19",
    "@storybook/html": "^5.3.19",
    "@storybook/theming": "^5.3.19",
    "babel-loader": "^8.1.0",
    "circular-dependency-plugin": "^5.2.0",
    "jest": "^26.1.0",
    "lodash-es": "^4.17.15",
    "mocha": "^8.0.1",
    "rollup": "^2.23.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^6.1.0",
    "rollup-plugin-transform-tagged-template": "0.0.3",
    "rollup-plugin-typescript2": "^0.27.1",
    "source-map-loader": "^1.0.1",
    "storybook": "^5.3.19",
    "ts-loader": "^8.0.1",
    "typescript": "^3.9.7",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-env": "^0.8.0"
  },
  "dependencies": {
    "@microsoft/fast-components-msft": "^1.6.0",
    "@microsoft/fast-element": "^0.15.1",
    "@microsoft/fast-foundation": "^1.5.0"
  }
}
